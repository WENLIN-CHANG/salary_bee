<nav class="brutalist-navbar fixed top-0 left-0 right-0 z-50" x-data="{ mobileMenuOpen: false }">
  <!-- 主要導航容器 -->
  <div class="bg-white border-b-4 border-black neubrutalist-shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">

        <!-- 品牌 Logo -->
        <div class="flex items-center">
          <%= link_to root_path, class: "flex items-center space-x-2" do %>
            <h1 class="text-2xl font-black text-black brutalist-tilt-minus-1">
              SalaryBee
            </h1>
            <span class="text-sm font-bold text-black hidden sm:block">薪資管理系統</span>
          <% end %>
        </div>

        <!-- 桌面版導航 -->
        <div class="hidden md:flex items-center space-x-4">
          <% if Current.user %>
            <!-- 已登入狀態 -->
            <div class="flex items-center space-x-4">
              <!-- 歡迎訊息 -->
              <div class="bg-yellow-400 border-4 border-black px-4 py-2 neubrutalist-shadow brutalist-tilt-1">
                <span class="font-bold text-black">歡迎，</span>
                <span class="font-medium text-black"><%= Current.user.email_address %></span>
              </div>

              <!-- 登出按鈕 -->
              <%= button_to "登出", session_path, method: :delete,
                  class: "brutalist-button-secondary px-4 py-2 text-sm",
                  data: { turbo: false } %>
            </div>
          <% else %>
            <!-- 未登入狀態 -->
            <div class="flex items-center space-x-3">
              <!-- 登入按鈕 -->
              <%= link_to "登入", new_session_path,
                  class: "brutalist-button-secondary px-4 py-2 text-sm" %>

              <!-- 註冊按鈕 (暫時連到登入頁面) -->
              <%= link_to "註冊", new_session_path,
                  class: "brutalist-button-primary px-4 py-2 text-sm" %>
            </div>
          <% end %>
        </div>

        <!-- 手機版漢堡選單按鈕 -->
        <div class="md:hidden">
          <button @click="mobileMenuOpen = !mobileMenuOpen"
                  class="bg-black text-white border-4 border-black p-2 neubrutalist-shadow-sm hover:bg-gray-800 transition-colors">
            <span x-show="!mobileMenuOpen">☰</span>
            <span x-show="mobileMenuOpen">✕</span>
          </button>
        </div>

      </div>
    </div>

    <!-- 手機版選單 -->
    <div x-show="mobileMenuOpen"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 transform -translate-y-2"
         x-transition:enter-end="opacity-100 transform translate-y-0"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 transform translate-y-0"
         x-transition:leave-end="opacity-0 transform -translate-y-2"
         class="md:hidden border-t-4 border-black bg-yellow-200">

      <div class="px-4 py-6 space-y-4">
        <% if Current.user %>
          <!-- 已登入的手機版選單 -->
          <div class="bg-white border-4 border-black p-4 neubrutalist-shadow brutalist-tilt-1 mb-4">
            <p class="font-bold text-black mb-1">歡迎回來！</p>
            <p class="font-medium text-black text-sm"><%= Current.user.email_address %></p>
          </div>

          <%= button_to "登出", session_path, method: :delete,
              class: "brutalist-button-secondary w-full py-3 text-center",
              data: { turbo: false } %>
        <% else %>
          <!-- 未登入的手機版選單 -->
          <div class="space-y-3">
            <%= link_to "登入", new_session_path,
                class: "brutalist-button-secondary block w-full py-3 text-center" %>

            <%= link_to "註冊", new_session_path,
                class: "brutalist-button-primary block w-full py-3 text-center" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 裝飾性小元素 -->
  <div class="fixed top-20 right-4 pointer-events-none hidden lg:block">
    <div class="w-4 h-4 bg-red-500 border-4 border-black neubrutalist-shadow brutalist-tilt-2"></div>
  </div>
  <div class="fixed top-24 left-4 pointer-events-none hidden lg:block">
    <div class="w-3 h-3 bg-blue-600 border-4 border-black neubrutalist-shadow brutalist-tilt-minus-2"></div>
  </div>
</nav>

<!-- 為固定導航留出空間 -->
<div class="h-16"></div>

