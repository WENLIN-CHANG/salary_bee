<div class="min-h-screen bg-gradient-to-br from-yellow-100 to-yellow-200 p-4">
  <div class="max-w-4xl mx-auto">

    <div class="brutalist-card p-8 mb-8">
      <div class="flex justify-between items-start mb-6">
        <div>
          <h1 class="text-4xl font-black text-black mb-2 brutalist-tilt-minus-1">
            <%= @company.name %>
          </h1>
          <p class="text-lg font-bold text-black mb-1">
            統編：<%= @company.tax_id %>
          </p>
          <p class="text-lg font-medium text-black">
            建立於 <%= @company.created_at.strftime("%Y年%m月%d日") %>
          </p>
        </div>

        <div class="flex space-x-3">
          <%= link_to "編輯", edit_company_path(@company),
              class: "brutalist-button-primary py-2 px-4" %>
          <%= link_to "返回列表", companies_path,
              class: "brutalist-button-secondary py-2 px-4" %>
        </div>
      </div>

      <% if @company.description.present? %>
        <div class="bg-white border-4 border-black p-6 neubrutalist-shadow brutalist-tilt-1 mb-6">
          <h2 class="text-xl font-bold text-black mb-3">公司簡介</h2>
          <p class="font-medium text-black leading-relaxed">
            <%= simple_format(@company.description) %>
          </p>
        </div>
      <% end %>

      <!-- 公司統計 -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <div class="bg-blue-600 border-4 border-black p-4 neubrutalist-shadow text-white brutalist-tilt-1">
          <h3 class="font-bold text-lg mb-2">員工數量</h3>
          <p class="text-2xl font-black">0</p>
          <p class="text-sm">即將推出</p>
        </div>

        <div class="bg-green-500 border-4 border-black p-4 neubrutalist-shadow text-white brutalist-tilt-minus-1">
          <h3 class="font-bold text-lg mb-2">本月薪資</h3>
          <p class="text-2xl font-black">NT$ 0</p>
          <p class="text-sm">即將推出</p>
        </div>

        <div class="bg-purple-600 border-4 border-black p-4 neubrutalist-shadow text-white brutalist-tilt-2">
          <h3 class="font-bold text-lg mb-2">部門數量</h3>
          <p class="text-2xl font-black">0</p>
          <p class="text-sm">即將推出</p>
        </div>
      </div>

      <!-- 操作區域 -->
      <div class="bg-yellow-400 border-4 border-black p-6 neubrutalist-shadow brutalist-tilt-minus-1">
        <h2 class="text-xl font-bold text-black mb-4">快捷操作</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <button class="brutalist-button-secondary py-3 px-4 cursor-not-allowed opacity-75">
            新增員工（即將推出）
          </button>
          <button class="brutalist-button-secondary py-3 px-4 cursor-not-allowed opacity-75">
            薪資計算（即將推出）
          </button>
          <button class="brutalist-button-secondary py-3 px-4 cursor-not-allowed opacity-75">
            產生報表（即將推出）
          </button>
          <%= link_to "返回儀表板", dashboard_path,
              class: "brutalist-button-primary py-3 px-4 text-center" %>
        </div>
      </div>
    </div>
  </div>

  <!-- 背景裝飾 -->
  <div class="fixed inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-20 left-10 w-6 h-6 bg-red-500 border-4 border-black neubrutalist-shadow brutalist-tilt-1"></div>
    <div class="absolute bottom-20 right-10 w-4 h-4 bg-orange-500 border-4 border-black neubrutalist-shadow brutalist-tilt-minus-2"></div>
  </div>
</div>