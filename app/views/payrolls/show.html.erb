<div class="min-h-screen bg-gradient-to-br from-yellow-200 to-yellow-300 p-4">
  <div class="max-w-7xl mx-auto">

    <!-- 標題和操作區域 -->
    <div class="brutalist-card p-8 mb-6">
      <div class="flex justify-between items-center mb-4">
        <div>
          <h1 class="text-4xl font-black text-black mb-2 brutalist-tilt-minus-1">
            <%= @payroll.period_text %>
          </h1>
          <p class="text-lg font-bold text-black"><%= @company.name %></p>
        </div>
        <div class="flex gap-4 items-center">
          <% if @payroll.draft? %>
            <span class="px-4 py-2 bg-yellow-300 border-4 border-black font-black neubrutalist-shadow brutalist-tilt-1">草稿</span>
          <% elsif @payroll.confirmed? %>
            <span class="px-4 py-2 bg-green-300 border-4 border-black font-black neubrutalist-shadow brutalist-tilt-1">已確認</span>
          <% elsif @payroll.paid? %>
            <span class="px-4 py-2 bg-blue-300 border-4 border-black font-black neubrutalist-shadow brutalist-tilt-1">已發放</span>
          <% end %>
        </div>
      </div>

      <!-- 總計資訊 -->
      <div class="grid grid-cols-2 gap-4 mb-6">
        <div class="bg-white border-4 border-black p-4 neubrutalist-shadow brutalist-tilt-1">
          <p class="text-sm font-bold text-gray-600 mb-1">總應發</p>
          <p class="text-3xl font-black text-black">NT$ <%= number_to_currency(@payroll.total_gross_pay || 0, unit: "", precision: 0) %></p>
        </div>
        <div class="bg-white border-4 border-black p-4 neubrutalist-shadow brutalist-tilt-minus-1">
          <p class="text-sm font-bold text-gray-600 mb-1">總實發</p>
          <p class="text-3xl font-black text-black">NT$ <%= number_to_currency(@payroll.total_net_pay || 0, unit: "", precision: 0) %></p>
        </div>
      </div>

      <!-- 操作按鈕 -->
      <div class="flex gap-4">
        <%= link_to "返回列表", payrolls_path, class: "brutalist-button-secondary" %>

        <% if @payroll.can_edit? %>
          <%= button_to "計算薪資", calculate_payroll_path(@payroll), method: :post, class: "brutalist-button-primary" %>
        <% end %>

        <% if @payroll.may_confirm? %>
          <%= button_to "確認薪資", confirm_payroll_path(@payroll), method: :post,
                        class: "brutalist-button-primary",
                        data: { confirm: "確定要確認此薪資批次嗎？確認後將無法修改。" } %>
        <% end %>
      </div>
    </div>

    <!-- 員工薪資明細表格 -->
    <div class="brutalist-card p-8">
      <h2 class="text-2xl font-black text-black mb-4">員工薪資明細</h2>

      <% if @payroll_items.any? %>
        <div class="overflow-x-auto">
          <table class="w-full border-4 border-black">
            <thead>
              <tr class="bg-yellow-300 border-b-4 border-black">
                <th class="px-4 py-3 text-left font-black text-black border-r-4 border-black">員工</th>
                <th class="px-4 py-3 text-right font-black text-black border-r-4 border-black">底薪</th>
                <th class="px-4 py-3 text-right font-black text-black border-r-4 border-black">津貼</th>
                <th class="px-4 py-3 text-right font-black text-black border-r-4 border-black">應發</th>
                <th class="px-4 py-3 text-right font-black text-black border-r-4 border-black">扣款</th>
                <th class="px-4 py-3 text-right font-black text-black border-r-4 border-black">保險費</th>
                <th class="px-4 py-3 text-right font-black text-black">實發</th>
              </tr>
            </thead>
            <tbody class="bg-white">
              <% @payroll_items.each do |item| %>
                <tr class="border-b-4 border-black hover:bg-yellow-50">
                  <td class="px-4 py-3 font-bold text-black border-r-4 border-black"><%= item.employee.name %></td>
                  <td class="px-4 py-3 text-right font-bold text-black border-r-4 border-black">
                    <%= number_to_currency(item.base_salary, unit: "", precision: 0) %>
                  </td>
                  <td class="px-4 py-3 text-right font-bold text-black border-r-4 border-black">
                    <%= number_to_currency(item.total_allowances, unit: "", precision: 0) %>
                  </td>
                  <td class="px-4 py-3 text-right font-bold text-green-700 border-r-4 border-black">
                    <%= number_to_currency(item.gross_pay || 0, unit: "", precision: 0) %>
                  </td>
                  <td class="px-4 py-3 text-right font-bold text-black border-r-4 border-black">
                    <%= number_to_currency(item.total_deductions, unit: "", precision: 0) %>
                  </td>
                  <td class="px-4 py-3 text-right font-bold text-black border-r-4 border-black">
                    <%= number_to_currency(item.total_insurance_premium || 0, unit: "", precision: 0) %>
                  </td>
                  <td class="px-4 py-3 text-right font-bold text-blue-700">
                    <%= number_to_currency(item.net_pay || 0, unit: "", precision: 0) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <p class="text-xl font-bold text-black mb-4">尚未計算薪資</p>
          <% if @payroll.can_edit? %>
            <%= button_to "開始計算", calculate_payroll_path(@payroll), method: :post, class: "brutalist-button-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 背景裝飾 -->
  <div class="fixed inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-20 left-10 w-6 h-6 bg-red-500 border-4 border-black neubrutalist-shadow brutalist-tilt-1"></div>
    <div class="absolute top-40 right-20 w-4 h-4 bg-orange-500 border-4 border-black neubrutalist-shadow brutalist-tilt-minus-2"></div>
    <div class="absolute top-1/4 left-1/3 w-5 h-5 bg-yellow-400 border-4 border-black neubrutalist-shadow brutalist-tilt-2"></div>
    <div class="absolute bottom-40 left-20 w-7 h-7 bg-green-500 border-4 border-black neubrutalist-shadow brutalist-tilt-minus-1"></div>
    <div class="absolute bottom-20 right-10 w-5 h-5 bg-blue-500 border-4 border-black neubrutalist-shadow brutalist-tilt-1"></div>
    <div class="absolute top-2/3 right-1/4 w-4 h-4 bg-purple-500 border-4 border-black neubrutalist-shadow brutalist-tilt-minus-2"></div>
    <div class="absolute top-1/2 left-10 w-6 h-6 bg-pink-500 border-4 border-black neubrutalist-shadow brutalist-tilt-2"></div>
  </div>
</div>
